        android:textColor="@android:color/primary_text_light"
        android:textSize="17sp"
        android:paddingStart="25dp"
        android:paddingTop="10dp"/>
    <Switch
        android:id="@+id/note_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nick_switch"
        android:layout_alignParentEnd="true"
        android:paddingEnd="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="3dp"/>

    <TextView
        android:id="@+id/org_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/note_text"
        android:layout_alignParentStart="true"
        android:text="Organization"
        android:textColor="@android:color/primary_text_light"
        android:textSize="17sp"
        android:paddingStart="25dp"
        android:paddingTop="10dp"/>
    <Switch
        android:id="@+id/org_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/note_switch"
        android:layout_alignParentEnd="true"
        android:paddingEnd="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="3dp"/>

    <TextView
        android:id="@+id/org_title_text"
